#:kivy 1.8.0

<BigCircle>
	canvas.before:
		Color:
			rgb: .18, .54, .34
		Ellipse:
			size: min(self.size), min(self.size)
			pos: root.center_x - min(self.size)/2, root.center_y - min(self.size)/2

	Label:
		id: total_label
		text: "Total left: "
		color: (1, 1, 1, 1)
		font_size: dp(20)		
		pos: root.center_x - min(self.size)/2, root.center_y - min(self.size)/2

<DrActionBar>
	pos_hint: {'top':1}
	background_color: (.2, .2, .2, .8)
	ActionView:
		use_seperator: True
		ActionPrevious:
			title: "Dr. Moneybags"
			with_previous: False
			app_icon: 'images/2happyface.png'
		ActionOverflow:
		ActionButton:
			text: "+"

<MainScreen>:
	total: total_label
	GridLayout
		size: root.size
		cols: 1
		canvas:
			Color:
				rgb: 1, 1, 1
			Rectangle:
				size: self.size
		spacing: 20
		DrActionBar:
			id: act_bar
		BigCircle:
			id: big_cir
			size_hint: (.5, .5)
		Label:
			id: total_label
			text: "Total left: "
			color: (.2, .2, .2, 1)

<LoginScreen>:
	f_username: username
	f_password: password
	id: login_screen
	GridLayout:
		size: root.size
		canvas:
			Color:
				rgb: 1, 1, 1
			Rectangle:
				size: self.size
		
		rows: 5
		cols: 1
		row_default_height: "40dp"
		padding: 10
		Label:
			text: "Username:"
			color: (.5, .5, .5, 1)

		TextInput:
			height: "20dp"
			id: username
			multiline: False
		
		Label:
			text: "Password"
			color: (.5, .5, .5, 1)
		
		TextInput:
			height: "20dp"
			id: password
			password: True
			multiline:False
		
		Button:
			text: "Login"
			on_press: root.login()